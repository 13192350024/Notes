<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CountDownView">
        <attr name="background_color" format="color"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="text" format="string"/>
        <attr name="text_size" format="dimension"/>
        <attr name="text_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="BottomBar">
        <attr name="bar_img" format="reference"/>
        <attr name="bar_text" format="string"/>
    </declare-styleable>

    <declare-styleable name="ApproveListLayout">
        <attr name="pic_count" format="integer"/>
        <attr name="pic_size" format="dimension"/>
        <attr name="pic_offset" format="float"/>
    </declare-styleable>

    <declare-styleable name="FloatViewLayout">
        <attr name="offset" format="float"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ChartView">
        <attr name="baseColor" format="color"/>
        <attr name="isThumbnailMode" format="boolean"/>
        <attr name="android:textSize"/>
    </declare-styleable>

    <declare-styleable name="HorizontalProgressView">
        <attr name="foregroundColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="maxProgress" format="integer"/>
        <attr name="progress" format="integer"/>
        <attr name="backgroundType" format="enum">
            <enum name="rect" value="0"/>
            <enum name="round" value="1"/>
        </attr>
        <attr name="foregroundType" format="enum">
            <enum name="rect" value="0"/>
            <enum name="round" value="1"/>
        </attr>
    </declare-styleable>
</resources>