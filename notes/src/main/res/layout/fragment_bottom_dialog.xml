<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_eee"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/fragment_ios_bottom_dialog_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无标题，只有操作"/>

        <Button
            android:id="@+id/fragment_ios_bottom_dialog_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无操作，只有标题"/>

        <Button
            android:id="@+id/fragment_ios_bottom_dialog_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题＋1个操作"/>

        <Button
            android:id="@+id/fragment_ios_bottom_dialog_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题＋2个操作"/>

        <Button
            android:id="@+id/fragment_ios_bottom_dialog_btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无标题＋3个操作"/>

        <Button
            android:id="@+id/fragment_ios_bottom_dialog_btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无标题＋4个操作"/>

        <TextView
            android:id="@+id/xxxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是测试用的"/>
    </LinearLayout>

    <com.wuzhanglao.niubi.widget.ChartView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="#DDDDDD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="文章数 >"
                android:textColor="#999999"/>

            <com.wuzhanglao.niubi.widget.ChartView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>